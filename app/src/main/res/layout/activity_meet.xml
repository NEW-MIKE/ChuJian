<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetActivity">

    <TextView
        android:id="@+id/name_tv"
        android:text="星主"
        android:gravity="center"
        android:textColor="@color/normal_text_color"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_editview_bg"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/name_tv"
        app:layout_constraintTop_toTopOf="@+id/name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/name_tv"
        android:id="@+id/input_et"/>

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="密码"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintEnd_toEndOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_editview_bg"
        android:id="@+id/password_et"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/input_et"
        app:layout_constraintEnd_toEndOf="@+id/input_et"
        app:layout_constraintTop_toTopOf="@+id/password_tv"
        app:layout_constraintBottom_toBottomOf="@+id/password_tv"/>


    <TextView
        android:id="@+id/log_in_tv"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="登录"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintEnd_toEndOf="@+id/input_et"
        app:layout_constraintTop_toBottomOf="@+id/password_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>