<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/progress_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/progress_tv"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center|start"
        android:textSize="@dimen/view_text_size"
        android:paddingStart="10dp"
        android:visibility="invisible"
        android:text=""
        android:background="@drawable/ic_seekbar_info_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/move_seekbar"/>
    <View
        android:id="@+id/move_seekbar_bg"
        android:background="@drawable/pop_menu_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/move_seekbar"
        app:layout_constraintStart_toStartOf="@+id/move_seekbar">
    </View>
    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="@dimen/view_text_size"
        android:gravity="center"
        android:layout_marginTop="@dimen/pop_menu_seekbar_margin_top_bottom"
        android:textColor="@color/normal_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/move_seekbar"
        app:layout_constraintEnd_toEndOf="@id/move_seekbar"/>
    <TextView
        android:id="@+id/add_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:clickable="true"
        android:layout_marginTop="@dimen/pop_menu_seekbar_margin_top_bottom"
        app:layout_constraintTop_toBottomOf="@+id/type_tv"
        app:layout_constraintStart_toStartOf="@id/move_seekbar"
        app:layout_constraintEnd_toEndOf="@id/move_seekbar"
        android:background="@drawable/ic_add_click"/>
    <TextView
        android:id="@+id/dec_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/pop_menu_seekbar_margin_top_bottom"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/move_seekbar"
        app:layout_constraintEnd_toEndOf="@id/move_seekbar"
        android:background="@drawable/ic_decrease_click"/>

    <com.glide.chujian.view.VerticalSeekBar
        android:id="@+id/move_seekbar"
        android:layout_width="@dimen/both_side_menu_width"
        android:layout_height="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:max="100"
        android:progress="0"
        style="@style/Widget.SeekBar.Normal"
        android:layout_marginTop="@dimen/pop_menu_seekbar_margin_top_bottom"
        android:layout_marginBottom="@dimen/pop_menu_seekbar_margin_top_bottom"
        app:layout_constraintTop_toBottomOf="@+id/add_tv"
        app:layout_constraintBottom_toTopOf="@+id/dec_tv"
        app:layout_constraintStart_toEndOf="@+id/progress_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>