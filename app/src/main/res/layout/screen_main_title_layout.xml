<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/screen_title"
    android:layout_height="@dimen/title_height"
    android:orientation="horizontal"
    android:background="@color/all_blue_color"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="left"
        android:id="@+id/left_tv"
        android:textSize="@dimen/normal_text_size"
        android:layout_marginStart="@dimen/title_item_device_margin_end_start"
        android:text=""
        android:textColor="@color/normal_text_color"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:id="@+id/status_tv"
        android:text="@string/main_camera_status"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/normal_text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/right_tv"
        android:layout_marginEnd="@dimen/title_item_device_margin_end_start"
        android:textSize="@dimen/normal_text_size"
        android:text="FrameInformation"
        android:textColor="@color/normal_text_color"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>