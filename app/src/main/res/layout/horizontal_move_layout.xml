<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horizontal_progress_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/left_pin"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/horizontal_left_tv"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_left_tv"
        android:background="@color/screen_spinner_background"/>
    <TextView
        android:id="@+id/left_circle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background = "@drawable/ic_historgram_left_bar"
        app:layout_constraintTop_toTopOf="@+id/left_pin"
        app:layout_constraintBottom_toBottomOf="@+id/left_pin"
        app:layout_constraintStart_toStartOf="@+id/horizontal_left_tv"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_left_tv"/>
    <TextView
        android:id="@+id/horizontal_left_tv"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/right_pin"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/horizontal_right_tv"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_right_tv"
        android:background="@color/screen_spinner_background"/>
    <TextView
        android:id="@+id/right_circle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_historgram_right_bar"
        app:layout_constraintStart_toStartOf="@+id/horizontal_right_tv"
        app:layout_constraintEnd_toEndOf="@id/horizontal_right_tv"
        app:layout_constraintTop_toTopOf="@+id/right_pin"
        app:layout_constraintBottom_toBottomOf="@+id/right_pin"/>
    <TextView
        android:id="@+id/horizontal_right_tv"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>