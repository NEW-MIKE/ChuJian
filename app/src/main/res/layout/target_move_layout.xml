<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horizontal_progress_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/target_value"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="20dp"
        android:textSize="9sp"
        android:text="20:30"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_target_tv"
        app:layout_constraintStart_toStartOf="@+id/horizontal_target_tv"/>
    <TextView
        android:id="@+id/horizontal_target_tv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.glide.chujian.view.VerticalLineView
        android:id="@+id/center_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/horizontal_target_tv"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_target_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>