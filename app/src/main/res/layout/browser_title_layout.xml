<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:orientation="horizontal"
    android:background="@color/all_blue_color"
    >

    <TextView
        android:id="@+id/whole_back_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/back_btn"/>
    <ImageButton
        android:layout_width="@dimen/browser_title_item_size"
        android:layout_height="@dimen/browser_title_item_size"
        android:gravity="center"
        android:id="@+id/back_btn"
        android:background="@drawable/select_return_btn_bg"
        android:layout_marginStart="@dimen/title_item_device_margin_end_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/title_item_margin_item_size"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintEnd_toStartOf="@+id/delete_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/path_rv"/>
    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="@dimen/browser_title_item_size"
        android:layout_height="@dimen/browser_title_item_size"
        android:layout_marginEnd="@dimen/title_item_device_margin_end_start"
        android:textColor="@color/normal_text_color"
        android:background="@drawable/ic_browser_edit_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/exit_tv"
        android:layout_width="@dimen/browser_title_item_size"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/title_item_device_margin_end_start"
        android:layout_height="@dimen/browser_title_item_size"
        android:textColor="@color/normal_text_color"
        android:background="@drawable/ic_browser_exit_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ToggleButton
        android:visibility="invisible"
        android:id="@+id/all_choose_cb"
        android:layout_width="@dimen/browser_title_item_size"
        android:textAllCaps="false"
        android:textOn=" "
        android:textOff=" "
        android:layout_height="@dimen/browser_title_item_size"
        android:layout_marginEnd="@dimen/title_item_margin_item_size"
        android:background="@drawable/select_browser_all_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exit_tv"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/delete_tv"
        android:layout_width="@dimen/browser_title_item_size"
        android:textAllCaps="false"
        android:layout_height="@dimen/browser_title_item_size"
        android:textColor="@color/normal_text_color"
        android:background="@drawable/select_dustbin_btn_bg"
        android:layout_marginEnd="@dimen/title_item_margin_item_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/all_choose_cb"/>

    <TextView
        android:id="@+id/file_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/view_text_size"
        android:textColor="@color/normal_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/view_text_size"
        android:textColor="@color/normal_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_close_btn"
        android:layout_width="@dimen/browser_title_item_size"
        android:layout_height="@dimen/browser_title_item_size"
        android:background="@drawable/select_close_btn_bg"
        android:layout_marginStart="@dimen/title_item_device_margin_end_start"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>