<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/goto_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number_1_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_2_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_2_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:text="2"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toEndOf="@+id/number_1_tv"
        app:layout_constraintEnd_toStartOf="@+id/number_3_tv"
        app:layout_constraintTop_toTopOf="@+id/number_1_tv"/>
    <TextView
        android:id="@+id/number_3_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:text="3"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toEndOf="@+id/number_2_tv"
        app:layout_constraintEnd_toStartOf="@+id/number_delete_tv"
        app:layout_constraintTop_toTopOf="@+id/number_1_tv"/>
    <TextView
        android:id="@+id/number_delete_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="删除"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toEndOf="@+id/number_3_tv"
        app:layout_constraintTop_toTopOf="@+id/number_1_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/number_4_tv"
        />

    <!--第一行结束-->

    <TextView
        android:id="@+id/number_4_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="4"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_1_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_1_tv"
        app:layout_constraintTop_toBottomOf="@+id/number_1_tv" />

    <TextView
        android:id="@+id/number_5_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="5"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_2_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_2_tv"
        app:layout_constraintTop_toTopOf="@+id/number_4_tv"/>
    <TextView
        android:id="@+id/number_6_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="6"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_3_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_3_tv"
        app:layout_constraintTop_toTopOf="@+id/number_4_tv"/>


    <!--第二行结束-->

    <TextView
        android:id="@+id/number_7_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="7"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_1_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_1_tv"
        app:layout_constraintTop_toBottomOf="@+id/number_4_tv" />

    <TextView
        android:id="@+id/number_8_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="8"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_2_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_2_tv"
        app:layout_constraintTop_toTopOf="@+id/number_7_tv"/>
    <TextView
        android:id="@+id/number_9_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="9"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_3_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_3_tv"
        app:layout_constraintTop_toTopOf="@+id/number_7_tv"/>

    <!--第三行结束-->
    <TextView
        android:id="@+id/number_min_us"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="-"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="30dp"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_1_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_1_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_7_tv" />

    <TextView
        android:id="@+id/number_0_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_2_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_2_tv"
        app:layout_constraintTop_toTopOf="@+id/number_min_us"/>
    <TextView
        android:id="@+id/number_dot"
        android:layout_width="0dp"
        android:layout_height="@dimen/normal_item_height"
        android:gravity="center"
        android:text="."
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="30dp"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_3_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_3_tv"
        app:layout_constraintTop_toTopOf="@+id/number_min_us"/>

    <!--第四行结束-->

    <TextView
        android:id="@+id/number_sure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="确认"
        android:textAllCaps="false"
        android:textColor="@color/select_dis_enable_textcolor"
        android:textSize="@dimen/view_text_size"
        android:background="@drawable/select_number_pop_btn_bg"
        app:layout_constraintStart_toStartOf="@+id/number_delete_tv"
        app:layout_constraintEnd_toEndOf="@+id/number_delete_tv"
        app:layout_constraintTop_toTopOf="@+id/number_7_tv"
        app:layout_constraintBottom_toBottomOf="@id/number_min_us"/>

</androidx.constraintlayout.widget.ConstraintLayout>