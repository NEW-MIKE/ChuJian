<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:orientation="horizontal"
    android:background="@color/all_blue_color"
    android:id="@+id/title"
    >

    <TextView
        android:id="@+id/back_ground"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/back_btn"/>
    <ImageButton
        android:layout_width="@dimen/browser_title_item_size"
        android:layout_height="@dimen/browser_title_item_size"
        android:gravity="center"
        android:id="@+id/back_btn"
        android:layout_marginStart="@dimen/title_item_device_margin_end_start"
        android:background="@drawable/select_return_btn_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:id="@+id/status_tv"
        android:text="@string/astro_library"
        android:textSize="@dimen/view_text_size"
        android:textColor="@color/normal_text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="@dimen/browser_title_item_size"
        android:layout_height="@dimen/browser_title_item_size"
        android:gravity="center"
        android:id="@+id/menu_tv"
        android:layout_marginEnd="@dimen/title_item_device_margin_end_start"
        android:background="@drawable/select_lib_more_btn_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>